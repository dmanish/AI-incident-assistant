{
  "name": "AI Incident Assistant (Manual Run)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "forwardPorts": [8080],
  "postCreateCommand": "pip install -r requirements.txt && python scripts/bootstrap.py && python scripts/ingest.py",
  "postStartCommand": "python scripts/ingest_guard.py",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "humao.rest-client"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}

